include ../../common/mixins

.shop_area
    .container
        aside.sidebar_widget
            .widget_inner
                .widget_list.widget_filter
                    h2 Filter by price
                    form(action='#')
                        #slider-range
                        button(type='submit') Filter
                        input(type='text' name='text' id='amount')
                .widget_list.widget_categories
                    +shop_checkbox('categories',
                                    'categories1 (6)', 'categories2 (10)',
                                    'categories3 (4)', 'categories4 (10)', 'categories5 (8)')

                .widget_list.widget_categories
                    +shop_checkbox('Manufacturer',
                                    'brake parts(6)', 'accessories (10)',
                                    'engine parts (4)', 'hermes (10)', 'luis vuitton (8)',
                                    'tommy hilfiger (7)', 'house plants (6)')

                .widget_list.widget_categories
                    +shop_checkbox('select by color',
                                    'black (6)', 'blue (8)', 'brown (6)', 'green (4)',
                                    'pink (8)', 'white (3)', 'yellow (3)')

            .shop_sidebar_banner
                a(href='#')
                    img(src='./images/bg/banner12.jpg' alt='')

        section.shop_content
            .shop_banner
                img(src='./images/bg/banner11.jpg' alt='')
            .shop_title
                h1 shop
            .shop_toolbar_wrapper
                .shop_toolbar_btn
                    button(data-role='grid_3' type='button' class='active btn-grid-3' data-toggle='tooltip' title='3')
                    button(data-role='grid_4' type='button' class='btn-grid-4' data-toggle='tooltip' title='4')
                    button(data-role='grid_list' type='button' class='btn-list' data-toggle='tooltip' title='List')
                .niceselect_option
                    form.select_option(action='#')
                        select(name='orderby' id='short')
                            option(selected value='1') Sort by average rating
                            option(value='2') Sort by popularity
                            option(value='3') Sort by newness
                            option(value='4') Sort by price: low to high
                            option(value='5') Sort by price: high to low
                            option(value='6') Product Name: Z
                .page_amount
                    p Showing 1-9 of 21 results
            .shop_wrapper
                +product_area_item('./images/product/product1.jpg', './images/product/product2.jpg')
                +product_area_item('./images/product/product3.jpg', './images/product/product4.jpg')
                +product_area_item('./images/product/product5.jpg', './images/product/product6.jpg')
                +product_area_item('./images/product/product7.jpg', './images/product/product8.jpg')
                +product_area_item('./images/product/product9.jpg', './images/product/product10.jpg')
                +product_area_item('./images/product/product11.jpg', './images/product/product12.jpg')
                +product_area_item('./images/product/product1.jpg', './images/product/product2.jpg')
                +product_area_item('./images/product/product3.jpg', './images/product/product4.jpg')
                +product_area_item('./images/product/product5.jpg', './images/product/product6.jpg')
                +product_area_item('./images/product/product7.jpg', './images/product/product8.jpg')
                +product_area_item('./images/product/product9.jpg', './images/product/product10.jpg')
                +product_area_item('./images/product/product11.jpg', './images/product/product12.jpg')
            .shop_toolbar.t_bottom
                +pagination

